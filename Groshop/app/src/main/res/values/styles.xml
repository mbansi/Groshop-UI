<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="primary_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/primary_color_button_style</item>
        <item name="android:fontFamily">@font/merriweather_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_marginStart">@dimen/_24sdp</item>
        <item name="android:layout_marginEnd">@dimen/_24sdp</item>
    </style>

    <style name="input_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:padding">@dimen/_14sdp</item>
        <item name="android:background">@drawable/edit_text_style</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="fontFamily">@font/merriweather</item>
        <item name="android:textColorHint">@color/textHintColor</item>
    </style>

    <style name="base_text_h2_raleway_semibold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:layout_marginStart">@dimen/_24sdp</item>
        <item name="android:layout_marginEnd">@dimen/_24sdp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_28sdp</item>
    </style>

    <style name="base_text_h3_raleway_semibold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:layout_marginStart">@dimen/_56sdp</item>-->
<!--        <item name="android:layout_marginEnd">@dimen/_56sdp</item>-->
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="edit_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_24sdp</item>
        <item name="android:layout_marginEnd">@dimen/_24sdp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
    </style>

</resources>