<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#00689C36"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivOnBoarding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/onboarding_food"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintTop_toBottomOf="@id/ivOnBoarding"
        android:layout_marginTop="-20dp"
        android:background="@drawable/bg_curve"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOnBoardTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:textColor="@color/colorSecondary"
        android:textSize="@dimen/_25sdp"
        android:text="@string/text_groshop"
        android:textAlignment="center"
        android:fontFamily="@font/raleway_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivOnBoarding" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOnBoardDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_28sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:fontFamily="@font/merriweather"
        android:text="@string/text_detail"
        android:textAlignment="center"
        android:textColor="@color/colorSecondary"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tvOnBoardTitle"
        app:layout_constraintStart_toStartOf="@id/tvOnBoardTitle"
        app:layout_constraintTop_toBottomOf="@id/tvOnBoardTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>