<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_promotion">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPromotion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/promotions"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOffer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="@dimen/_100sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_32sdp"
        app:fontFamily="@font/raleway_semibold"
        android:text="@string/text_offer"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/neutralWhite"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOfferDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvOffer"
        app:layout_constraintStart_toStartOf="@id/tvOffer"
        app:layout_constraintEnd_toEndOf="@id/tvOffer"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_33sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:fontFamily="@font/merriweather"
        android:text="@string/text_offer_date"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/neutralWhite"/>
</androidx.constraintlayout.widget.ConstraintLayout>




