<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvForgotPasswordTitle"
                style="@style/base_text_h2_raleway_semibold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_24sdp"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/text_forgot_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivForgotPasswordScreen"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:src="@drawable/login_illustration"
                app:layout_constraintEnd_toEndOf="@id/tvForgotPasswordTitle"
                app:layout_constraintStart_toStartOf="@id/tvForgotPasswordTitle"
                app:layout_constraintTop_toBottomOf="@id/tvForgotPasswordTitle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAuthorizationText"
                style="@style/base_text_h3_raleway_semibold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:fontFamily="@font/merriweather_light"
                android:justificationMode="inter_word"
                android:text="@string/text_authorization"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="@id/tvForgotPasswordTitle"
                app:layout_constraintStart_toStartOf="@id/tvForgotPasswordTitle"
                app:layout_constraintTop_toBottomOf="@id/ivForgotPasswordScreen" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llMobile"
                style="@style/input_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@id/tvForgotPasswordTitle"
                app:layout_constraintStart_toStartOf="@id/tvForgotPasswordTitle"
                app:layout_constraintTop_toBottomOf="@id/tvAuthorizationText">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spCountryCode"
                    android:layout_width="wrap_content"
                    android:background="@null"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="@dimen/_2sdp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_6sdp"
                    android:background="#ACADAC" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/mobileInputLayout"
                    android:layout_width="wrap_content"
                    style="@style/edit_input_layout"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:hintEnabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMobile"
                        style="@style/input_text_style"
                        android:hint="@string/hint_your_phone_number"
                        android:imeOptions="actionDone"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:maxLength="10"
                        android:textCursorDrawable="@drawable/custom_cursor"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNext"
                style="@style/primary_button_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/button_text_next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/tvForgotPasswordTitle"
                app:layout_constraintStart_toStartOf="@id/tvForgotPasswordTitle"
                app:layout_constraintTop_toBottomOf="@id/llMobile"
                android:layout_marginBottom="@dimen/_15sdp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

